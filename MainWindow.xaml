<Window x:Class="Gruppe.netHarbourWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gruppe.netHarbourWPF"
        mc:Ignorable="d"
        Title="Gruppe.Net Harbour" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File" Margin="3" FontSize="15">
                <MenuItem Header="DockSpace" Click="DockSpace_Click"/>
                <MenuItem Header="ContainerYard" Click="ContainerYard_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Background="Beige">
            <!-- Content here -->
            <TextBlock Text="Content goes here..." VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
